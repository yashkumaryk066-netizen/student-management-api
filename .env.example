# Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# ==================== LOCAL DEVELOPMENT ====================
# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration (Local PostgreSQL)
# Leave DATABASE_URL empty for local development
# The app will use the default settings in settings.py
# DATABASE_URL=

# CORS Configuration (comma-separated list)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ==================== RAILWAY PRODUCTION ====================
# Railway automatically sets DATABASE_URL when you add PostgreSQL
# You only need to set these environment variables in Railway dashboard:

# Generate a new secret key for production:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
# SECRET_KEY=your-production-secret-key-here

# Production settings
# DEBUG=False
# ALLOWED_HOSTS=.railway.app,yourdomain.com
# CORS_ALLOWED_ORIGINS=https://yourfrontend.vercel.app,https://yourdomain.com

# Database (automatically set by Railway when you add PostgreSQL)
# DATABASE_URL=postgresql://user:password@host:port/dbname


# ==================== AI SERVICES ====================
# Default AI Provider (chatgpt, gemini, or claude)
AI_PROVIDER=chatgpt

# ChatGPT / OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# Google Gemini Configuration
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-3-pro-latest
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=20000

# Anthropic Claude Configuration
# Get your API key from: https://console.anthropic.com/
CLAUDE_API_KEY=your-claude-api-key-here
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_TEMPERATURE=0.7
CLAUDE_MAX_TOKENS=2000
